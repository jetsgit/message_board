%h1 Message Board for Puget Sound Salmon

.row
  .col-md-6
    - @messages.each do |msg|
      %h2= link_to msg.title, message_path(msg.id)
      %p 
        Author: #{msg.user.email}, Published #{time_ago_in_words(msg.created_at)}
.row
  .col-md-12
    = link_to 'New Message', new_message_path, class: "btn btn-primary"
