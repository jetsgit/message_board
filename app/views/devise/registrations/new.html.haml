#sign-up
  %h2 Sign up

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|                                              
    = devise_error_messages!
    .form-inputs
      .form-group.col-md-6.col-md-offset-3
        = f.input :first_name, wrapper: :vertical_input_group do
          = f.input_field :first_name, class: "form-control"
      .form-group.col-md-6.col-md-offset-3
        = f.input :last_name, wrapper: :vertical_input_group do
          = f.input_field :last_name, class: "form-control"
      .form-group.col-md-6.col-md-offset-3
        = f.input :email, wrapper: :vertical_input_group do
          = f.input_field :email, class: "form-control"
      .form-group.col-md-6.col-md-offset-3
        = f.input :description, wrapper: :vertical_input_group do
          = f.input_field :description, class: "form-control"
      .form-group.col-md-6.col-md-offset-3
        = f.input :password, wrapper: :vertical_input_group do
          = f.input_field :password, class: "form-control"
      .form-group.col-md-6.col-md-offset-3
        = f.input :password_confirmation, wrapper: :vertical_input_group do
          = f.input_field :password_confirmation, class: "form-control"
    .form-actions.col-md-3.col-md-offset-3
      = f.button :submit, class: "btn btn-primary"
= render 'devise/shared/links'
