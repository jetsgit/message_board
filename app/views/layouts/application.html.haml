!!! 
%html
  %head
    %title MessageBoard
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #page
      %header.container
        #menu.navbar.navbar-default.navbar-fixed-top
          .navbar-header
            %button.btn.btn-success.navbar-toggle{ data:{ toggle: 'collapse', target: '.navbar-collapse' }}
              %span.glyphicon.glyphicon-chevron-down
            #logo
              %h4= link_to 'PugetSoundSalmon', root_path
          .navbar-collapse.collapse 
            %ul.nav.navbar-nav.navbar-right
              - if user_signed_in?
                %li.nav= link_to 'New Msg', '#new_message_modal', 'data-toggle' =>  "modal"
                %li.nav= link_to 'Logout', destroy_user_session_path, method: :delete
              - else
                %li.nav= link_to "Sign In", '#login_modal', 'data-toggle' => "modal"
                %li.nav= link_to "Sign Up", new_user_registration_path
          
    - if notice
      %p.notice.alert.alert-success= notice
    - if alert
      %p.alert.alert-info= alert
    - if user_signed_in?
      #new_message_modal.modal.fade( tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" )
        .modal-dialogue(role="document")
          .modal-content
            .modal-header
              %button.close(type="button" data-dismiss="modal" aria-hidden="true") &times; 
              %h4#myModalLabel.modal-title Create a New Message
            .modal-body
              = render 'form', modal: true
            .modal-footer
              %button.btn.btn-default( type='button' data-dismiss='modal' ) Close
    -if !user_signed_in?
      #login_modal.modal.fade( tabindex="-1" role="dialog" aria-labelledby="myModalSignin"  aria-hidden="true"  )
        .modal-dialogue(role="document")
          .modal-content
            .modal-header
              %button.close{"data-dismiss" => "modal"} Ã—
              %h4#myModalSignin.modal-title Sign In
            .modal-body
              = simple_form_for(:user, :url => session_path(:user), :html => {:class => 'form-horizontal'}) do |f|
                .inputs
                  = f.input :email, :required => false, :autofocus => true
                  = f.input :password, :required => false
                .modal-footer
                  = f.button :submit, "Sign in", :class => 'btn btn-primary'
                  = link_to "Forgot your password?", new_password_path(:user)
    %section#body.container
      = yield
